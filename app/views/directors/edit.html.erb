<h3>Edit Director</h3>

<%= form_with url: "/directors/#{@director.id}", method: :patch, data: { turbo: false } do |form| %>
  <div>
    <%= form.label :name, 'Director Name:' %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :age, 'Director Age:' %>
    <%= form.text_field :age %>
  </div>
  <div>
    <%= form.label :alive, 'Director Alive' %>
    <%= form.radio_button :alive, 'true' %> True
    <%= form.radio_button :alive, 'false' %> False
  </div>
  <div>
    <%= form.submit 'Update Director' %>
  </div>
<% end %>
